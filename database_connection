mysql -h studio-ghibli-db-instance.cx28qu4eu267.us-east-1.rds.amazonaws.com -P 3306 -u admin -p


CREATE DATABASE studio;
USE studio;

CREATE TABLE course (
    id INT PRIMARY KEY,
    name VARCHAR(255),
    description TEXT,
    image VARCHAR(255),
    price DECIMAL(10,2),
    duration INT
);

CREATE TABLE user_table (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255),
    email VARCHAR(255),
    role INT,
    password VARCHAR(255),
    course_id INT
);

